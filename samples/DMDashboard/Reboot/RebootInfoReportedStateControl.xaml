<UserControl x:Class="DMDashboard.RebootInfoReportedStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMDashboard"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="One-time Reboot"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="3" x:Name="SingleRebootTime"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="Daily Reboot"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="3" x:Name="DailyRebootTime"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="Last Boot"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="3" x:Name="LastBoot"/>
    </Grid>
</UserControl>
