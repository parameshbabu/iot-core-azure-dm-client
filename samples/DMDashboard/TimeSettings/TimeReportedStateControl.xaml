<UserControl x:Class="DMDashboard.TimeReportedStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="NTP Server"/>
        <Border Grid.Row="0" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="NtpServer" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="Time (UTC)"/>
        <Border Grid.Row="1" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="LocalTime" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" Text="Bias"/>
        <Border Grid.Row="2" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="Bias" HorizontalAlignment="Left"/>
        </Border>
        
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="3" Text="Standard"/>
        
        <TextBlock Grid.Row="4" Grid.Column="0" Margin="15,3,3,3" Text="Name"/>
        <Border Grid.Row="4" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="StandardName" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="5" Grid.Column="0" Margin="15,3,3,3" Text="Date"/>
        <Border Grid.Row="5" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="StandardDate" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="6" Grid.Column="0" Margin="15,3,3,3" Text="Bias"/>
        <Border Grid.Row="6" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="StandardBias" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="7" Grid.Column="0" Margin="15,3,3,3" Text="Day of Week"/>
        <Border Grid.Row="7" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="StandardDayOfWeek" HorizontalAlignment="Left"/>
        </Border>

        <TextBlock Grid.Row="8" Grid.Column="0" Margin="3" Text="Daylight"/>

        <TextBlock Grid.Row="9" Grid.Column="0" Margin="15,3,3,3" Text="Name"/>
        <Border Grid.Row="9" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="DaylightName" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="10" Grid.Column="0" Margin="15,3,3,3" Text="Date"/>
        <Border Grid.Row="10" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="DaylightDate" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="11" Grid.Column="0" Margin="15,3,3,3" Text="Bias"/>
        <Border Grid.Row="11" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="DaylightBias" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Grid.Row="12" Grid.Column="0" Margin="15,3,3,3" Text="Day of Week"/>
        <Border Grid.Row="12" Grid.Column="1" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="DaylightDayOfWeek" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</UserControl>
