<UserControl x:Class="DMDashboard.DmAppStoreUpdateReportedStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMDashboard"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="Response"/>
        <Border Grid.Row="0" Grid.Column="2" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="Response" HorizontalAlignment="Left"/>
        </Border>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" Text="Last Check"/>
        <Border Grid.Row="1" Grid.Column="2" Background="#F8F8F8" Margin="3">
            <TextBlock Width="200" x:Name="LastCheck" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</UserControl>
